            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><h4><i class="fa fa-shopping-bag" aria-hidden="true"></i><b>ShopZo.Com</b></h4></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                       @* <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>*@
                        @if (httpcontextAccessor.HttpContext.Session.GetString("RoleId") == "1")
                        { 
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Product List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Index">Category List</a>
                        </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Register" asp-action="UserList">User List</a>
                            </li>
                           
                        }

                    </ul>
                </div>
            </div>
            <ul class="navbar-nav ml-auto">
                @if (httpcontextAccessor.HttpContext.Session.GetString("RoleId") == "0")
                {
                    
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="ViewCart">Cart</a>
                    </li>

                }
                @if (string.IsNullOrEmpty(httpcontextAccessor.HttpContext.Session.GetString("uid")))
                {
                   
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Register" asp-action="Registration">Register</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Register" asp-action="Login">Login</a>
                </li>
                    
                        }
                @if (!string.IsNullOrEmpty(httpcontextAccessor.HttpContext.Session.GetString("uid")))
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="">Welcome @httpcontextAccessor.HttpContext.Session.GetString("username")</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Register" asp-action="Logout">LogOut</a>
                    </li>
                }
            </ul>
        </nav>
      
    </header>
